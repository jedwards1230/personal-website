{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@@/*": ["public/*"]
        },
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strictNullChecks": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.mdx",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
